<p style="color: green"><%= notice %></p>

<h1><%= @list.name %></h1>
<%= link_to "Create Bookmark",  new_list_bookmark_path(@list), class: "btn btn-primary" %>
<%= link_to "Go back to lists", lists_path, class: "btn btn-primary" %>

<div class="row">
<% @list.bookmarks.each do |bookmark|%>
<div class="col-6 w-100vh">
<div class="card" style="width: 18rem;">
  <%= image_tag bookmark.movie['poster_url'], alt: bookmark.movie['title'], class: "card-img-top" %>
  <div class="card-body">
    <h5 class="card-title"><%= bookmark.movie['title'] %></h5>
    <p class ="card-text fw-bold"><%= bookmark.comment %></p>
    <p class="card-text"><%= bookmark.movie['overview'] %></p>
    <p class="card-text"><%= bookmark.movie['rating'] %></p>
    <%= link_to bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
    <i class="fa-solid fa-trash"></i>
    <% end %>
  </div>
</div>
</div>
<% end %>
</div>
