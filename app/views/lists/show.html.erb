<% if notice  %>
<div class="flash flash-success alert alert-dismissible fade show" role="alert">
  <span><%= notice %></span>
  <a data-bs-dismiss="alert" aria-label="Close">
    <i class="fas fa-times"></i>
  </a>
</div>
<% end %>

<h1><%= @list.name %></h1>
<%= link_to "Create Bookmark",  new_list_bookmark_path(@list), class: "btn btn-primary" %>
<%= link_to "Go back to lists", lists_path, class: "btn btn-primary" %>

<div class="row">
<% @list.bookmarks.each do |bookmark| %>
<div class="col-lg-6 col-sm-12">
  <div class="card-product">
  <%= image_tag bookmark.movie['poster_url'], alt: bookmark.movie['title'] %>
  <div class="card-product-infos scroll">
    <h2><%= bookmark.movie['title'] %> - <%= bookmark.movie['rating'] %></h2>
    <h4> <%= bookmark.comment %> </h4>
    <p> <strong>Overview:</strong> <%= bookmark.movie['overview'] %></p>
      <%= link_to bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
    <i class="fa-solid fa-trash"></i>
    <% end %>
  </div>
</div>
</div>
<% end %>
</div>
